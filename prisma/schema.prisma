// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Event {
    id             String    @id @default(cuid())
    createdAt      DateTime  @default(now())
    startDate      DateTime?
    endDate        DateTime?
    hostId         String
    title          String
    qrCodeImageUrl String?

    posts       Post[]
    eventGuests EventGuestCheckin[]
    gallery     Image[]
}

model EventGuestCheckin {
    id      String @id @default(cuid())
    event   Event  @relation(fields: [eventId], references: [id])
    eventId String
    guestId String

    @@unique([eventId, guestId])
}

model Post {
    id        String    @id @default(cuid())
    createdAt DateTime  @default(now())
    images    Image[]
    caption   String?   @db.VarChar(255)
    authorId  String
    event     Event?    @relation(fields: [eventId], references: [id])
    eventId   String
    comments  Comment[]
    likes     Like[]

    @@index([eventId])
}

model Image {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    url       String   @db.VarChar(600)
    post      Post     @relation(fields: [postId], references: [id])
    postId    String
    Event     Event    @relation(fields: [eventId], references: [id])
    eventId   String

    @@index([postId])
    @@index([eventId])
}

model Comment {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    post      Post     @relation(fields: [postId], references: [id])
    postId    String
    content   String   @db.VarChar(255)

    @@index([postId])
}

model Like {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    post      Post     @relation(fields: [postId], references: [id])
    postId    String
    userId    String

    @@index([postId])
}
